<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/night">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/hi_text"
        android:text="적음"
        android:textColor="@color/white"
        android:textSize="90sp"
        android:fontFamily="@font/songmyung_regular"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toTopOf="@+id/sub_text"
        android:layout_marginTop="20dp"
        android:text="적음 소개말"
        android:textSize="30sp"
        android:fontFamily="@font/songmyung_regular"
        android:textColor="#CFCECE"/>

    <TextView
        android:id="@+id/sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hi_text"
        app:layout_constraintBottom_toTopOf="@+id/view_place"
        android:layout_marginTop="15dp"
        android:text="'적음'에 어서오세요"
        android:textSize="25sp"
        android:fontFamily="@font/songmyung_regular"
        android:textColor="#ACABAB"/>

    <View
        android:id="@+id/view_place"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:background="#27FFFFFF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_text"
        android:layout_marginTop="60dp"/>

    <View
        android:id="@+id/linear1"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#59FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/ex_word"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/ex_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sub_text"
        android:layout_marginTop="115dp"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:fontFamily="@font/songmyung_regular"
        android:text="'글감'"/>

    <View
        android:id="@+id/linear2"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#59FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/ex_word"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/intro_text1"/>


    <TextView
        android:id="@+id/intro_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ex_word"
        android:text="매일 날이 바뀌며"
        android:layout_marginTop="35dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/intro_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_text1"
        android:text="새로운 글감이 나타납니다"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>